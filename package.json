  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^v3.1.0",
    "esm": "^3.0.84",
    "husky": "^1.1.2",
    "prettier": "1.14.3",
    "pretty-quick": "^1.7.0",
    "rollup": "^0.64.1",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-terser": "^1.0.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1"
  },
  "scripts": {
