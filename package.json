  "keywords": [
    "2d",
    "camera",
    "webgl"
  ],
  "license": "MIT",
  "main": "dist/camera-2d.js",
  "module": "src/index.js",
  "unpkg": "dist/camera-2d.min.js",
  "jsdelivr": "dist/camera-2d.min.js",
  "files": [
    "src/index.js",
    "dist/camera-2d.js",
    "dist/camera-2d.min.js"
  ],
  "dependencies": {
